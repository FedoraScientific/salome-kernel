# source path
top_srcdir=@top_srcdir@
top_builddir=../..
srcdir=@srcdir@
VPATH=.:@srcdir@


TEX=DevelopersGuide.tex
TEX_PS=$(TEX:%.tex=%.ps)
TEX_PDF=$(TEX:%.tex=%.pdf)

.SUFFIXES: .tex .dvi .ps .pdf

doc: $(TEX_PS) clean $(TEX_PDF) clean

clean:
	\rm -f *~ *.bak *.aux *.log *.dvi *.toc $(TEX:%.tex=%.out)
	\rm -f dummy thumb*

distclean: clean
	\rm -f $(TEX_PS) $(TEX_PDF)

install:

#implicits rules
.tex.dvi: clean
	latex $<
	latex $<
.dvi.ps:
	dvips $< -o $@


.tex.pdf: clean
	pdflatex $<
	pdflatex $<

